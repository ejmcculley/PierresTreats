@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h4>Add a Treat</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.TreatName)
  @Html.TextBoxFor(model => model.TreatName)

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.LabelFor(model => model.Ingredients)
  @Html.TextBoxFor(model => model.Ingredients)

  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Add Treat" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>